{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react"
  },
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./",
      "module": "CommonJS"
    }
  },
  "include": [
    ".",
    "src",
    "desc.d.ts",
    "before-build-script",
    "./node_modules/redux-persist/types"
  ],
  "exclude": [
    "**/*.md",
    "node_modules"
  ]
}